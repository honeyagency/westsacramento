<section class="section--base-started border--{{base.header.color}} spacing--gutter spacing--vert-2 spacing--dsk-vert-3">
	<h2>{{base.started.title}}</h2>

	<div class="flex flex--wrap {% if base.started.steps|length < 3 %}justify--start{% else %}justify--between{% endif %} align--items-baseline">
		
		{% for step in base.started.steps %}
			<div class="grid--one {% if base.started.steps|length == 1 %}{% elseif base.started.steps|length == 2 %}grid--half{% else %}grid--sm-third{% endif %}">
				<h5 class="h1 mar--no">{{step.title}}</h5>
				<div class="font--small">{{step.text}}</div>
			</div>
		{% endfor %}
	</div>
</section>