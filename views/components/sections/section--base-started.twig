<section class="section--base-started border--{{base.header.color}} spacing--horiz-1 spacing--vert-2  margin--top-2">
	<h2>{{base.started.title}}</h2>

	<div class="flex flex--wrap flex--double justify--between align--items-baseline">
		
		{% for step in base.started.steps %}
			<div class="grid--one margin--vert-1 {% if base.started.steps|length == 1 %}{% elseif base.started.steps|length == 2 %}grid--half{% else %}grid--sm-third grid--md-third{% endif %}">
				<h5 class="h1 mar--no">{{step.title}}</h5>
				<div class="font--small">{{step.text}}</div>
			</div>
		{% endfor %}
	</div>
</section>